<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black"
    tools:context=".auth.AuthFragment">

    <ImageView
        android:layout_marginTop="150dp"
        android:src="@drawable/notes"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginTop="310dp"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Регистрация по номеру"
        android:textColor="#8E8B8B"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <EditText
        android:layout_marginHorizontal="30dp"
        android:id="@+id/number"
        android:background="@drawable/backrount_title"
        android:layout_marginTop="411dp"
        android:textColorHint="#B1B1B1"
        android:padding="10dp"
        android:drawableStart="@drawable/ic_phone"
        android:hint="@string/your_number"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>

    <EditText
        android:id="@+id/code"
        android:padding="10dp"
        android:textColorHint="#B1B1B1"
        android:drawableStart="@drawable/ic_baseline_mail_outline_24"
        android:hint="@string/your_code"
        android:background="@drawable/backrount_title"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/number"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>

    <Button
        android:id="@+id/code_button"
        android:background="@drawable/backraund_button"
        android:text="@string/receive_code"
        android:textColor="@color/white"
        android:layout_marginHorizontal="90dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/code"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>

    <TextView
        android:id="@+id/send_code"
        android:textColor="@color/black_orange"
        android:text="@string/send_code"
        android:layout_marginTop="20dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/code_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</androidx.constraintlayout.widget.ConstraintLayout>